<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<StackPane prefHeight="600.0" prefWidth="800.0" styleClass="root-container" stylesheets="@login_styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projek_keuangan.controller.LoginController">

    <!-- Background Decorative Elements -->
    <Circle fill="#4f46e5" opacity="0.1" radius="150.0" translateX="-300.0" translateY="-200.0" />
    <Circle fill="#06b6d4" opacity="0.08" radius="120.0" translateX="280.0" translateY="180.0" />
    <Circle fill="#ec4899" opacity="0.06" radius="80.0" translateX="320.0" translateY="-150.0" />

    <!-- Main Content Container -->
    <VBox alignment="CENTER" maxWidth="420.0" styleClass="main-container">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
        </padding>

        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="8.0" styleClass="header-section">
            <VBox.margin>
                <Insets bottom="30.0" />
            </VBox.margin>

            <!-- Logo/Icon -->
            <Region styleClass="app-logo" />

            <!-- Title -->
            <Label styleClass="main-title" text="MoneyTracker" />
            <Label styleClass="subtitle" text="Kelola keuangan Anda dengan mudah" />
        </VBox>

        <!-- Login Form -->
        <VBox spacing="20.0" styleClass="form-container">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>

            <!-- Username Field Container -->
            <VBox spacing="8.0" styleClass="input-group">
                <Label styleClass="field-label" text="Username" />
                <HBox styleClass="input-container">
                    <Region styleClass="input-icon user-icon" />
                    <TextField fx:id="usernameField" promptText="Masukkan username Anda" styleClass="modern-textfield" />
                </HBox>
            </VBox>

            <!-- Password Field Container -->
            <VBox spacing="8.0" styleClass="input-group">
                <Label styleClass="field-label" text="Password" />
                <HBox styleClass="input-container">
                    <Region styleClass="input-icon lock-icon" />
                    <PasswordField fx:id="passwordField" promptText="Masukkan password Anda" styleClass="modern-textfield" />
                </HBox>
            </VBox>

            <!-- Message Label -->
            <Label fx:id="messageLabel" styleClass="message-label" />

            <!-- Action Buttons -->
            <VBox spacing="15.0" styleClass="button-group">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>

                <!-- Login Button -->
                <Button onAction="#handleLogin" styleClass="primary-button" text="Masuk" />

                <!-- Divider -->
                <HBox alignment="CENTER" spacing="15.0" styleClass="divider-container">
                    <Region styleClass="divider-line" />
                    <Label styleClass="divider-text" text="atau" />
                    <Region styleClass="divider-line" />
                </HBox>

                <!-- Register Button -->
                <Button onAction="#switchToRegister" styleClass="secondary-button" text="Buat Akun Baru" />
            </VBox>
        </VBox>

        <!-- Footer -->
        <VBox alignment="CENTER" spacing="5.0" styleClass="footer-section">
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
            <Label styleClass="footer-text" text="Â© 2025 MoneyTracker" />
            <Label styleClass="footer-subtext" text="Aplikasi manajemen keuangan terpercaya" />
        </VBox>
    </VBox>
</StackPane>